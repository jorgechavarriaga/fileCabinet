.wrapper_with_padding   
    #docs.clearfix 
        - unless @docs.blank?
            - @docs.each do |doc|
                %a{href: doc_path(doc)}
                    .doc
                        %p.title= doc.title
                        %p.date= time_ago_in_words(doc.created_at)
                        %p.content= truncate(doc.content, length: 80)
                        %p.full_date= doc.created_at.strftime("%B %e, %Y %l:%M %p %Z")
        - else  
            %h2 Create Doc! 
            %p Start Creating Documents and Organizing your life!
            %button= link_to "Create Doc", new_doc_path
    .pagination
        = will_paginate @docs, class: "justify-content-center" 

